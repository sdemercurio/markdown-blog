<div class="form-group">
    <label for="title">Title</label>
    <input aria-label="enter title value" required value="<%= blogpost.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group mt-4">
    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control"><%= blogpost.description %></textarea>
</div>

<div class="form-group mt-4">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= blogpost.markdown %></textarea>
</div>

<a href="/" class= "btn cancel-btn mt-2">Cancel</a>
<button type="submit" class="btn new-btn mt-2">Save</button>