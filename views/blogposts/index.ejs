    <title>Deep Thoughts by Sarah D.</title>
</head>

<body>
    <div class="container">
        <div class="mb-4 header">
        <h1>Deep Thoughts</h1>
        <h4>by Sarah D.</h4>
    </div>
        <button class="btn new-btn">
        <a href="/blogposts/new">New Post</a>
    </button>
    <% blogposts.forEach(blogposts => { %>
        <div class="card mt-4">
            <div class="card-body">
              <h4 class="card-title"><%= blogposts.title %></h4>
              <div class="card-subtitle text-muted mb-2"><%= blogposts.dateCreated.toLocaleDateString() %></div>
              <p class="card-text mb-2"><%= blogposts.description %></p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
    <%}) %>
    </div>
</body>

</html>